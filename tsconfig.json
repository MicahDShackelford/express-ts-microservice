{
    "compilerOptions": {
        "target": "es2018",                          
        "module": "esnext",
        "moduleResolution": "node",    
        "allowSyntheticDefaultImports": true,                 
        "noEmitOnError": true,
        "lib": ["es2017"],                            
        "strict": true,  
        "esModuleInterop": false,                 
        "outDir": "dist",
        "baseUrl": "src",
        "rootDir": "./",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types",
        ]
    },
    "include": ["*.ts"]
}